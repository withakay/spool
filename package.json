{
  "name": "@withakay/spool",
  "version": "0.20.4-local.20260123000000",
  "description": "AI-native system for spec-driven development",
  "keywords": [
    "spool",
    "specs",
    "cli",
    "ai",
    "development"
  ],
  "homepage": "https://github.com/withakay/Spool",
  "repository": {
    "type": "git",
    "url": "https://github.com/withakay/Spool"
  },
  "license": "MIT",
  "author": "Spool Contributors",
  "type": "module",
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "bin": {
    "spool": "./bin/spool.js"
  },
  "files": [
    "dist",
    "bin",
    "schemas",
    "scripts/postinstall.js",
    "!dist/**/*.test.js",
    "!dist/**/__tests__",
    "!dist/**/*.map"
  ],
  "scripts": {
    "lint": "biome lint src/",
    "format": "biome check --write --linter-enabled=false --assist-enabled=false .",
    "format:check": "biome check --linter-enabled=false --assist-enabled=false .",
    "build": "node build.js",
    "dev": "tsc --watch",
    "dev:cli": "bun run build && node bin/spool.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:postinstall": "node scripts/postinstall.js",
    "prepare": "bun run build",
    "prepublishOnly": "bun run build",
    "postinstall": "node scripts/postinstall.js",
    "check:pack-version": "node scripts/pack-version-check.mjs",
    "release": "bun run release:ci",
    "release:ci": "bun run check:pack-version && bunx changeset publish",
    "changeset": "changeset"
  },
  "engines": {
    "node": ">=20.19.0"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.2",
    "@changesets/cli": "^2.27.7",
    "@biomejs/biome": "^2.3.12",
    "@types/node": "^24.2.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@inquirer/core": "^10.2.2",
    "@inquirer/prompts": "^7.8.0",
    "chalk": "^5.5.0",
    "commander": "^14.0.0",
    "fast-glob": "^3.3.3",
    "ora": "^8.2.0",
    "yaml": "^2.8.2",
    "zod": "^4.0.17"
  }
}
